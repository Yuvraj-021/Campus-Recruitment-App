            <TextView
                android:id="@+id/achievements2"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/achievementsimg2"
                android:text="Parents Name" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/achievementsimg3"
                android:src="@drawable/achieve"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Achievement 3"
                android:layout_toRightOf="@id/achievementsimg3"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/achievements3"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/achievementsimg3"
                android:text="Your Date of birth" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/achievementsimg4"
                android:src="@drawable/achieve"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Achievement 4"
                android:layout_toRightOf="@id/achievementsimg4"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/achievements4"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/achievementsimg4"
                android:text="Enter your Nationality" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <View style="@style/proifleDetailsView" />
        <TextView
            android:text="Technical Skills"
            style="@style/profileDetailsTextMain"
            android:textSize="20dp"/>
        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
