                android:layout_toRightOf="@id/dbknownimg"
                style="@style/profileDetailsTextMain"/>

            <TextView
                android:id="@+id/dbknown"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/dbknownimg"
                android:text="Parents Name" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/osknownimg"
                android:src="@drawable/operatingsystem"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Operating System Known"
                android:layout_toRightOf="@id/osknownimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/osknown"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/osknownimg"
