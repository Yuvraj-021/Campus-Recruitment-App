            <TextView
                android:id="@+id/sscper"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/sscperimg"
                android:text="Fulltime/PartTime" />

        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout
            style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/clgimg"
                android:src="@drawable/college"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="College Name"
                android:layout_toRightOf="@id/clgimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/clgname"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/clgimg"
                android:text="enter clgname please" />

        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout
            style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/gradpassyearimg"
                android:src="@drawable/graduationpassing"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Graduation Passing Year"
                android:layout_toRightOf="@id/gradpassyearimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/gradpassyear"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/gradpassyearimg"
                android:text="graduation passing year " />

        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout
            style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/gradpercentimg"
                android:src="@drawable/percentage"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Degree Percentge"
                android:layout_toRightOf="@id/gradpercentimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/gradpercent"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/gradpercentimg"
                android:text="graduation percentage  " />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <View style="@style/proifleDetailsView" />
        <TextView
            android:text="Achievements"
            style="@style/profileDetailsTextMain"
            android:textSize="20dp"/>
        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/achievementsimg1"
                android:src="@drawable/achieve"
                style="@style/profileDetailsImage" />

            <TextView
