        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/Devtypeimg"
                android:src="@drawable/role"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Devleoper Type"
                android:layout_toRightOf="@id/Devtypeimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/Devtype"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/Devtypeimg"
                android:text="Developer Type" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <Button
            android:id="@+id/studpro_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:background="#C700FC"
            android:layout_gravity="right"/>
        <View style="@style/proifleDetailsView" />

    </LinearLayout>
</ScrollView>

</androidx.core.widget.NestedScrollView>
