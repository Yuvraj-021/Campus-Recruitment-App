<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <View style="@style/proifleDetailsView" />
        <View style="@style/proifleDetailsView" />
        <TextView
            android:text="Personal Details"
            style="@style/profileDetailsTextMain"
            android:textSize="20dp"/>
        <View style="@style/proifleDetailsView" />

        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/Studentnameimg"
                android:src="@drawable/student2"
                style="@style/profileDetailsImage" />

            <TextView
                android:id="@+id/nameTextView"
                android:text="Student Name"
                android:layout_toRightOf="@id/Studentnameimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/studentnametext"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/Studentnameimg"
                android:text="Student name" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/parentsimg"
                android:src="@drawable/parents"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Parents Name"
                android:layout_toRightOf="@id/parentsimg"
                style="@style/profileDetailsTextMain"/>

            <TextView
                android:id="@+id/parentstext"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/parentsimg"
                android:text="Parents Name" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/dobimg"
                android:src="@drawable/calendar"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Date OF Birth"
                android:layout_toRightOf="@id/dobimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/dob"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/dobimg"
                android:text="Your Date of birth" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />
        <RelativeLayout style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/nationalityimg"
                android:src="@drawable/nationality"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Nationality"
                android:layout_toRightOf="@id/nationalityimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/nationality"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/nationalityimg"
                android:text="Enter your Nationality" />

        </RelativeLayout>

        <View style="@style/proifleDetailsView" />

        <RelativeLayout
            android:id="@+id/rlabout"
            style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/hobbiesimg"
                android:src="@drawable/hobbies"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="Hobbies"
                android:layout_toRightOf="@id/hobbiesimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/hobbies"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/hobbiesimg"
                android:text="Your Hobbies" />

        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <View style="@style/proifleDetailsView" />
        <TextView
            android:text="Educational Qualification"
            style="@style/profileDetailsTextMain"
            android:textSize="20dp"/>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout
            style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/schoolimg"
                android:src="@drawable/school"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="School Name"
                android:layout_toRightOf="@id/schoolimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/schoolname"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/schoolimg"
                android:text="Enter Your School Name" />

        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout
            style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/schpassimg"
                android:src="@drawable/year"
                style="@style/profileDetailsImage" />

            <TextView
                android:text="School Passing Year"
                android:layout_toRightOf="@id/schpassimg"
                style="@style/profileDetailsTextMain" />

            <TextView
                android:id="@+id/schpassyear"
                style="@style/profileDetailsMiniText"
                android:layout_toRightOf="@id/schpassimg"
                android:text="Fulltime/PartTime" />

        </RelativeLayout>
        <View style="@style/proifleDetailsView" />
        <RelativeLayout
            style="@style/profileDetailsLayout">
            <ImageView
                android:id="@+id/sscperimg"
                android:src="@drawable/percentage"
                style="@style/profileDetailsImage" />

            <TextView
