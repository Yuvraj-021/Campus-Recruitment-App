<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            android:elevation="50dp"
            app:cardCornerRadius="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/company_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/companydefault"
                    android:text="Shadow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/companynamevi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Comapany Name"
                        android:textColor="#9980EE"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:id="@+id/adresscompanyvi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Address"
                        android:textColor="#9980EE"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/company_jobdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="Description"
                        android:textColor="#9980EE"
                        android:textSize="15dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vacancy: "
                        android:textColor="#9980EE"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/vacancy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  0"
                        android:textColor="#9980EE"
                        android:textSize="15dp" />
                </LinearLayout>

                    <Button
                        android:id="@+id/applybtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:background="#783BFF"
                        android:text="Apply"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>